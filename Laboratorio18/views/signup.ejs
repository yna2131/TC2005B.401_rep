<%- include('includes/head.ejs') %>

<h1 class="title">Regístrate</h1>

<br><br>

<form action="/users/signup" method="POST">

    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >

    <label for="nombre">Nombre:</label>
    <input required name="nombre" id="nombre" class="input is-rounded" type="text" placeholder="Eduardo Daniel Juárez Pineda">

    <label for="username">Nombre de usuario:</label>
    <input name="username" id="username" class="input is-rounded" type="text" placeholder="lalo">

    <label for="password">Password:</label>
    <input name="password" id="password" class="input is-rounded" type="password" >

    <br><br>

    <input class="button is-info is-rounded" type="submit" value="Registrar">

</form>

<%- include('includes/foot.ejs') %>
